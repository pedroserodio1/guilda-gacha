generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(cuid())
  discordId String       @unique
  coins     Int          @default(0)
  username  String       @default("")
  inventory Inventory[]
  actions   UserAction[]
}

model Character {
  id        String            @id @default(cuid())
  name      String            @unique
  rarity    String
  imageUrl  String            @default("")
  limited   Boolean           @default(false) // se é limitado ou não
  Inventory Inventory[]
  banners   BannerCharacter[]
}

model Inventory {
  id          String    @id @default(cuid())
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  character   Character @relation(fields: [characterId], references: [id])
  characterId String
  createdAt   DateTime  @default(now())
}

model Banner {
  id          String            @id @default(cuid())
  name        String            @unique
  description String?
  startDate   DateTime?
  endDate     DateTime?
  isActive    Boolean           @default(true)
  imageUrl    String
  characters  BannerCharacter[]
}

model BannerCharacter {
  id          String    @id @default(cuid())
  banner      Banner    @relation(fields: [bannerId], references: [id])
  bannerId    String
  character   Character @relation(fields: [characterId], references: [id])
  characterId String
  rateUp      Boolean   @default(false) // true se o char tem bônus no gacha
}

model UserAction {
  id         String   @id @default(cuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id])
  count      Int      @default(0)
  lastAction DateTime @default(now())
}
